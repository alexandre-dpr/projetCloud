FROM node:16.16.0 AS builder

WORKDIR /frontend

COPY ./frontend/vue/package.json ./

RUN npm install
COPY ./frontend/vue ./

RUN npm run build

FROM nginx:alpine

WORKDIR /usr/share/nginx/html

COPY --from=builder /frontend/dist .

RUN rm /etc/nginx/conf.d/default.conf
COPY ./frontend/nginx.conf /etc/nginx/conf.d/